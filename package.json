{
  "name": "lime-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"./**/*.{ts,tsx,js,jsx,json,md}\"",
    "format-check": "prettier --list-different \"./**/*.{ts,tx,js,jsx,json,md}\"",
    "lint": "tsc --noEmit && eslint --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx --quiet",
    "lint-fix": "tsc --noEmit && eslint --ignore-path .eslintignore . --ext ts,tsx,js,jsx --quiet  --fix",
    "start:ci": "react-scripts start",
    "build:ci": "react-scripts build",
    "test:ci": "react-scripts test",
    "eject:ci": "react-scripts eject",
    "lint:ci": "tsc --noEmit && eslint --ignore-path .eslintignore . --ext ts --ext tsx --ext js --ext jsx --quiet",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn format-check"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.1",
    "lint-staged": "^10.0.8",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
